    <script>

            $(document).ready(function () {
            const page = parseInt($(this).data('page'));
            if (isNaN(page) || page < 1) {
                loadProducts(1);
            } else {
                loadProducts(page);
            }
        });
         $(document).ready(function () {
            $('#globalSearchInputProduct').on('input change', function () {
                const query = $(this).val();
                if (query.length < 1) {
                    $('#suggestionList').empty().hide();
                    return;
                }

                $.ajax({
                    url: '/Product/SearchProducts', // thay bằng API gợi ý của bạn
                    type: 'GET',
                    data: {
                        searchTerm: query,
                        categoryId: $('.category-link.active').data('category-id') || 0,
                        minPrice: $('#globalSearchInputPriceMin').val() || 0,
                        maxPrice: $('#globalSearchInputPriceMax').val() || 1000000, // giá tối đa
                        pageNumper: 1,
                    },
                    success: function (data) {
                        let html = '';
                        if (data.value && data.value.length > 0) {
