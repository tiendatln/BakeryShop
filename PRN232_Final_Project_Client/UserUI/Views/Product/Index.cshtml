        </div>
    </section>

    <!-- Search Section -->
    <section class="search-section" style="padding: 3rem 0;">
        <div class="container">
            <div class="position-relative">
                <form id="globalSearchForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group-custom">
                                <label class="form-label">
                                    <i class="fas fa-box" style="margin-right: 8px;"></i>Product Name
                                </label>
                                <div class="input-wrapper">
                                    <i class="fas fa-search input-icon"></i>
                                    <input id="globalSearchInputProduct"
                                           class="form-control-custom"
                                           type="search"
                                           placeholder="Enter product name..."
                                           autocomplete="off" />
                                    <ul id="suggestionList" class="suggestion-list" style="display: none;"></ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="input-group-custom">
                                <label class="form-label">
                                    <i class="fas fa-dollar-sign" style="margin-right: 8px;"></i>Price Range
                                </label>
                                <div class="price-range">
                                    <div class="input-wrapper" style="flex: 1;">
                                        <i class="fas fa-coins input-icon"></i>
                                        <input id="globalSearchInputPriceMin"
                                               class="form-control-custom"
                                               type="number"
                                               placeholder="Min price..."
                                               min="0" autocomplete="on"/>
                                    </div>
                                    <span class="price-separator">to</span>
                                    <div class="input-wrapper" style="flex: 1;">
                                        <i class="fas fa-coins input-icon"></i>
                                        <input id="globalSearchInputPriceMax"
                                               class="form-control-custom"
                                               type="number"
                                               placeholder="Max price..."
                                               min="0" autocomplete="on"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products-section">
        <div class="container">
            <div class="section-header scroll-reveal">
                <h2>Featured Products</h2>
            </div>

            <div class="row g-4" id="productList">
                <style>
                    .product-card, .product-image, .product-info {
                        opacity: 1 !important;
                        visibility: visible !important;
                        display: block !important;
                        color: inherit !important;
                    }
                </style>
            </div>
            <div class="container mt-5">
                <nav>
                    <ul class="pagination justify-content-center"></ul>
                </nav>
            </div>

        </div>
    </section>

