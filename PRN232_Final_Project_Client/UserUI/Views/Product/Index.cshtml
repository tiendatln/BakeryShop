
@{
    ViewData["Title"] = "Product";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Link GG Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Monsieur+La+Doulaise&family=Oleo+Script:wght@400;700&family=Spectral:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <style>

        html, body {
            height: 100%;
            width: 100%;
            overflow-x: hidden; /* Ngăn chặn scroll ngang */
        }

        .hero {
            background-image: url('/img/PRODUCT/Background/Bakery.jpg'); /* Thay URL ảnh nền */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content:center;
            padding: 1rem 0;
        }

        .header-cart {
            font-size: 1.5rem;
            color: white;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .header-cart {
            font-size: 2rem;
            color: white;
            margin-bottom: 0.5rem; /* Khoảng cách giữa HOME và breadcrumb */
            text-transform: uppercase;
        }

       .header-cart .separator {
                margin: 0 0.5rem;
        }

        .breadcrumb {
        font-size: 1rem;
        color: white;
    }

    .breadcrumb a {
        color: white;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .breadcrumb a:hover {
        color: #f7811b; /* Màu cam khi hover */
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "/";
        color: white; /* Dấu "/" màu trắng */
        padding: -1px 0.5rem;
    }

    .breadcrumb-item.active {
        color: white; /* Màu trắng cho Product */
    }
        .text-left{
            font-family: "Oleo Script", serif;
            font-weight: 400;
            font-style: normal;
            font-size: 32px;
            margin-left: 50px;
        }
        .product-card .card {
            background-color: #f7811b; 
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 70%;
            width: 90%;
        }

        .container1 .row {
            gap: 0px; /* Add space between the cards */
            margin: 0 40px;
        }


        a:hover .card {
            transform: translateY(-5px); /* Di chuyển lên 5px */
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2); /* Tạo hiệu ứng đổ bóng */
            transition: all 0.3s ease-in-out;
        }

        .card {
            width: 300px; /* Tăng chiều rộng */
            height: 450px; /* Tăng chiều cao */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card img {
                width: 100%;
                height: 250px; /* Tăng chiều cao của ảnh */
                object-fit: cover;
                border-top-left-radius: 12px;
                border-top-right-radius: 12px;
            }

        .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            text-align: center;
            padding: 15px; /* Tăng khoảng cách nội dung */
        }

        .card-title {
            font-size: 1.2rem; /* Tăng kích thước chữ */
            font-weight: bold;
            white-space: nowrap; /* Không xuống dòng */
            overflow: hidden; /* Ẩn nội dung thừa */
            text-overflow: ellipsis; /* Hiển thị "..." khi quá dài */
            max-width: 100%;
        }

        .card-text {
            font-size: 1.2rem; /* Tăng kích thước chữ */
        }


    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <h1 class="header-cart text-center">
            PRODUCT
        </h1>
        <div class="breadcrumb-container d-flex text-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Product</li>
                </ol>
            </nav>
        </div>
    </section>
    <!-- Main Content -->
    <div class="container1 mt-3">
        <h1 class="text-left mb-4">List of Products</h1>
        <div class="row d-flex mb-4 justify-content-between">
            <!-- Example Product Cards -->
            <div class="col-md-2 product-card">
                <div class="card">
                    <div class="card-body text-white">
                        <h5 class="card-title"><a asp-action="Index" asp-controller="Product" asp-route-categoryId="1" style="color:white; text-decoration:none">Bread</a></h5>
                    </div>
                </div>
            </div>
            <div class="col-md-2 product-card">
                <div class="card">
                    <div class="card-body text-white">
                        <h5 class="card-title"><a asp-action="Index" asp-controller="Product" asp-route-categoryId="2" style="color:white; text-decoration:none">Cake Slice</a></h5>
                    </div>
                </div>
            </div>
            <div class="col-md-2 product-card">
                <div class="card">
                    <div class="card-body text-white">
                        <h5 class="card-title"><a asp-action="Index" asp-controller="Product" asp-route-categoryId="3" style="color:white; text-decoration:none">Savory</a></h5>
                    </div>
                </div>
            </div>
            <div class="col-md-2 product-card">
                <div class="card">
                    <div class="card-body text-white">
                        <h5 class="card-title"><a asp-action="Index" asp-controller="Product" asp-route-categoryId="4" style="color:white; text-decoration:none">Special</a></h5>
                    </div>
                </div>
            </div>
            <div class="col-md-2 product-card">
                <div class="card">
                    <div class="card-body text-white">
                        <h5 class="card-title"><a asp-action="Index" asp-controller="Product" asp-route-categoryId="5" style="color:white; text-decoration:none">Sweet</a></h5>
                    </div>
                </div>
            </div>
        </div>
        <!-- Additional Text -->
        <div class="text-center mb-4">
            <div style="display: flex; align-items: center; justify-content: center;">
                <hr style="width: 15%; margin: 0; border-top: 2px solid #f7811b;">
                <span style="padding: 0 50px; font-weight: bold; text-transform: uppercase; color:#f7811b">Wake Up Your Taste Buds</span>
                <hr style="width: 15%; margin: 0; border-top: 2px solid #f7811b;">
            </div>
            <h1 class="header-cart text-center" style="color:#f7811b">
                @if (ViewBag.Category == null)
                {
                    var productCate = Model.FirstOrDefault();
                    @productCate?.Category?.CategoryName
                } else
                {
                    @ViewBag.Category;
                }

            </h1>
        </div>
    </div>
    <!-- Food List Section -->
    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-4 g-4 justify-content-center" style="margin: 0 -40px;">
            @foreach(var product in Model)
            {
                <a asp-action="Index" asp-controller="Detail" asp-route-productId="@product.ProductId" style="text-decoration:none;">
                    <div class="col">
                        <div class="card h-100 text-center">
                            <img src="~/@product.ImageUrl" class="card-img-top" alt="@product.ProductName">
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text text-warning fw-bold">$@product.Price</p>
                                <button class="btn btn-warning text-white">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>