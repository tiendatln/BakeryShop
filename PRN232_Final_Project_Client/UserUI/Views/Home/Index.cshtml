@using DataAccess.Models
@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bakery Shop</title>
    <link href="https://fonts.googleapis.com/css2?family=Monsieur+La+Doulaise&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            width: 100%;
            overflow-x: hidden; /* Ngăn chặn scroll ngang */

        }
        body {
            margin: 0;
            padding: 0;
            background-color: white;
        }

        h1 {
            font-family: 'Monsieur La Doulaise';
            color: black;
            text-align: center;
            margin-top: 100px;
            font-size: 60px;
        }

        .monsieur-la-doulaise-regular {
            font-family: "Monsieur La Doulaise", serif;
            font-weight: 600;
            font-style: normal;
        }

        section {
            padding: 20px;
            text-align: center;
        }

        .bestSeller {
            display: flex;
            justify-content: space-around;
        }

        .product {
            width: 28%;
            height: auto;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-left: 30px;
            margin-right: 30px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
            .product a {
                color:black;
                text-decoration:none;
            }    

            .product a:hover {
                transform: translateY(-5px); /* Di chuyển lên 5px */
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2); /* Tạo hiệu ứng đổ bóng */
                transition: all 0.3s ease-in-out;
            }

            .product img {
                width: 100%;
            }

            .product button {
                background-color: antiquewhite;
                color: black;
                border: none; /* Loại bỏ đường viền của button */
                cursor: pointer; /* Biến con trỏ thành hình tay khi di chuột qua button */
                border-radius: 3px;
                width: 100px;
                height: 40px;
            }

                .product button:hover {
                    background-color: #ffcc00; /* Màu nền khi hover */
                    font-weight: 600;
                }

        /* CSS Style for Categories */
        .ourProduct {
            background-image: url('img/PRODUCT/Background/Bakery.jpg'); /* Hình ảnh nền */
            background-size: cover;
            padding: 20px;
            height: 500px;
            align-items: center;
        }

        .categories {
            display: flex;
            justify-content: space-around;
            margin-top: 40px;
        }

        .category {
            text-align: center;
            color: white;
        }

            .category img {
                width: 100%;
                max-width: 200px; /* Đảm bảo hình ảnh không quá rộng */
                border-radius: 10px; /* Bo tròn góc hình ảnh */
            }

            .category h3 {
                margin-top: 10px;
            }

            .category a {
                color: white;
                text-decoration: none;
            }

            /* Hover effect */
            .category:hover a {
                transform: scale(1.5); /* Phóng to chữ khi di chuột vào */
            }


            .category:hover img {
                transform: scale(1.2); /* Phóng to hình ảnh khi di chuột vào */
            }

            /* Hover effect for the entire category */
            .category:hover {
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Hiệu ứng đổ bóng khi di chuột vào */
            }

        .img_center {
            text-align: center;
            height: auto;
        }

            .img_center img {
                max-width: 100%;
                height: 100%;
            }
    </style>
</head>

<body>

    <div class="img_center">
        <img src="img/combo img/buffet.png" id="imageSlider" />
    </div>

    <h1>Best Sellers</h1>

    @{
        var rainbow = ViewData["rainbow"] as Product;
        var bunny = ViewData["bunny"] as Product;
        var lava = ViewData["lava"] as Product;
    }

    <section class="bestSeller">

        <div class="product">
            <a asp-action="Index" asp-controller="Detail" asp-route-productId="@rainbow?.ProductId">
                <h2 style="font-family: 'Baskerville Old Face'">@rainbow?.ProductName Cake</h2>
                <img src="@rainbow?.ImageUrl" />
                <p>@rainbow?.Description</p>
                <p>Price: $ @rainbow?.Price</p>
            </a>
        </div>


        <div class="product">
            <a asp-action="Index" asp-controller="Detail" asp-route-productId="@bunny?.ProductId">
                <h2 style="font-family: 'Baskerville Old Face'">@bunny?.ProductName Cake</h2>
                <img src="@bunny?.ImageUrl" />
                <p>@bunny?.Description</p>
                <p>Price: $ @bunny?.Price</p>
            </a>
        </div>


        <div class="product">
            <a asp-action="Index" asp-controller="Detail" asp-route-productId="@lava?.ProductId">
                <h2 style="font-family: 'Baskerville Old Face'">@lava?.ProductName Cake</h2>
                <img src="@lava?.ImageUrl" />
                <p>@lava?.Description</p>
                <p>Price: $ @lava?.Price $</p>
            </a>
        </div>

    </section>

    <section class="ourProduct">

        <div>
            <h2 style="color:azure; font-family: 'Baskerville Old Face' ">OUR PRODUCT</h2>
        </div>

        <div class="categories">
            <div class="category">
                <a>
                    <img src="~/img/PRODUCT/Bread/Gourment Fruit Loaf.png" alt="bread" />
                    <h3 style="font-family: 'Baskerville Old Face'">BREAD</h3>
                </a>
            </div>

            <div class="category">
                <a>
                    <img src="~/img/PRODUCT/Cake slice/Les Opera.png" alt="cake" />
                    <h3 style="font-family: 'Baskerville Old Face'">CAKE SLICE</h3>
                </a>
            </div>

            <div class="category">
                <a>
                    <img src="~/img/product/savory/chocolate croissant.png" />
                    <h3 style="font-family: 'Baskerville Old Face'">SAVORY</h3>
                </a>
            </div>

            <div class="category">
                <a>
                    <img src="~/img/PRODUCT/Special/Snowy Fruity.png" alt="special" />
                    <h3 style="font-family: 'Baskerville Old Face'">SPECIAL</h3>
                </a>
            </div>

            <div class="category">
                <a>
                    <img src="img/PRODUCT/Sweet/Chocolate Donut.png" alt="sweet" />
                    <h3 style="font-family: 'Baskerville Old Face'">SWEET</h3>
                </a>
            </div>
        </div>
        <!-- Add more categories as needed -->
    </section>

    <script>
        const images = [
            "img/combo img/buffet.png",
            "img/combo img/ny25.png",
            "img/combo img/price.jpg",
            "img/combo img/top.jpg"
        ];

        let currentIndex = 0;
        const imageElement = document.getElementById("imageSlider");

        function changeImage() {
            currentIndex = (currentIndex + 1) % images.length;
            imageElement.src = images[currentIndex];
        }

        setInterval(changeImage, 3000);
    </script>

</body>
</html>
